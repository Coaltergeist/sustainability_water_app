<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.sustainability.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeTextView"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Logout"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="logout"
        android:layout_marginStart="136dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewProfileButton"
        android:layout_marginStart="16dp"
        android:onClick="viewProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Start Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waterReport"
        android:onClick="startReport"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/viewProfileButton"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:text="View Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewMapButton"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="8dp"
        android:onClick="showMap"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="78dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/submitQualityReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quality Report"
        android:onClick="submitQualityReport"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/waterReport"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewSources"
        android:text="View Sources"
        android:layout_marginRight="41dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/viewMapButton" />

</android.support.constraint.ConstraintLayout>
